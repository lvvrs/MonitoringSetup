[Unit]
Description=Node_exporter
Documentation=https://github.com/prometheus/node_exporter
After=network-online.target

[Service]
USER=node_exporter
GROUP=node_exporter
EnvironmentFile={{ node_exporter.conf_dir }}/node_exporter-options
ExecStart={{ node_exporter.exec_dir }}/node_exporter $OPTIONS
ExecStop=/bin/kill -9 $MAINPID
Restart=on-failure

[Install]
WantedBy=multi-user.target